{
  "name": "@staticdeploy/cli",
  "description": "CLI tool for StaticDeploy",
  "version": "0.8.0",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "staticdeploy": "./bin/staticdeploy.js"
  },
  "files": [
    "bin",
    "build"
  ],
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/staticdeploy.git"
  },
  "homepage": "https://github.com/staticdeploy/staticdeploy",
  "bugs": {
    "url": "https://github.com/staticdeploy/staticdeploy/issues"
  },
  "scripts": {
    "compile": "rimraf build && tsc",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "test": "NODE_ENV=test mocha --exit -r ts-node/register --watch-extensions ts 'test/**/*.ts'"
  },
  "dependencies": {
    "@staticdeploy/sdk": "^0.8.0",
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.0",
    "tar": "^4.4.6",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.6",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/tar": "^4.0.0",
    "@types/yargs": "^11.1.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "create-fs-tree": "^1.0.0",
    "is-tar": "^1.0.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.2.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  }
}
