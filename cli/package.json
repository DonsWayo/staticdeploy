{
  "name": "@staticdeploy/cli",
  "description": "CLI tool for staticdeploy",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "staticdeploy": "./bin/staticdeploy.js"
  },
  "files": [
    "bin",
    "build"
  ],
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/staticdeploy.git"
  },
  "homepage": "https://github.com/staticdeploy/staticdeploy",
  "bugs": {
    "url": "https://github.com/staticdeploy/staticdeploy/issues"
  },
  "scripts": {
    "compile": "rimraf build && tsc",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "test": "TS_NODE_TYPE_CHECK=true NODE_ENV=test mocha --exit -r ts-node/register --watch-extensions ts 'test/**/*.ts'"
  },
  "dependencies": {
    "@staticdeploy/sdk": "^0.0.0",
    "fs-extra": "^5.0.0",
    "tar": "^4.4.1",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^5.0.1",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "@types/sinon": "^4.3.0",
    "@types/sinon-chai": "^2.7.29",
    "@types/tar": "^4.0.0",
    "@types/yargs": "^11.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "create-fs-tree": "^1.0.0",
    "is-tar": "^1.0.0",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.8",
    "sinon-chai": "^3.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.7.2"
  }
}
