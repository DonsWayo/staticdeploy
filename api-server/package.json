{
  "name": "@staticdeploy/api-server",
  "description": "staticdeploy api server",
  "version": "0.1.1",
  "private": true,
  "main": "build/server.js",
  "license": "MIT",
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/staticdeploy.git"
  },
  "bugs": {
    "url": "https://github.com/staticdeploy/staticdeploy/issues"
  },
  "scripts": {
    "compile": "rimraf build && tsc",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "test": "NODE_ENV=test NODE_PATH=src mocha --exit -t 5000 -r ts-node/register --watch-extensions ts 'test/**/*.ts'",
    "start": "NODE_ENV=production NODE_PATH=build node build/server.js",
    "docker:build": "docker build -f ./Dockerfile -t staticdeploy/api-server:$DOCKER_TAG ../",
    "docker:push": "docker push staticdeploy/api-server:$DOCKER_TAG"
  },
  "dependencies": {
    "@mondora/env": "^1.0.4",
    "@staticdeploy/storage": "^0.1.1",
    "bunyan": "^1.8.12",
    "bunyan-middleware": "^0.8.0",
    "convexpress": "^2.2.1",
    "express": "^4.16.3",
    "express-healthchecker": "^1.0.0",
    "express-jwt": "^5.3.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.3",
    "@types/chai-fuzzy": "^1.3.30",
    "@types/express": "^4.11.1",
    "@types/express-jwt": "^0.0.40",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/lodash": "^4.14.108",
    "@types/mocha": "^5.2.0",
    "@types/sinon": "^4.3.3",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "chai-fuzzy": "^1.6.1",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.7",
    "supertest": "^3.1.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  }
}
