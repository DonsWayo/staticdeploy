{
  "name": "@staticdeploy/core",
  "description": "StaticDeploy core module",
  "version": "0.15.2",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "lib/index.d.js",
  "files": [
    "lib",
    "es"
  ],
  "sideEffects": false,
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/staticdeploy.git"
  },
  "bugs": {
    "url": "https://github.com/staticdeploy/staticdeploy/issues"
  },
  "scripts": {
    "compile:node": "rimraf lib && tsc",
    "compile:browser": "rimraf es && tsc -p tsconfig.browser.json",
    "compile": "yarn compile:node && yarn compile:browser",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "test": "NODE_ENV=test mocha --exit -t 20000 -r ts-node/register --extension ts 'test/**/*.ts'"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "content-security-policy-builder": "^2.1.0",
    "content-security-policy-parser": "^0.3.0",
    "escape-string-regexp": "^4.0.0",
    "lodash": "^4.17.20",
    "md5": "^2.3.0",
    "micromatch": "^4.0.2",
    "mime": "^2.4.6",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cheerio": "^0.22.23",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/lodash": "^4.14.165",
    "@types/md5": "^2.2.1",
    "@types/micromatch": "^4.0.0",
    "@types/mime": "^2.0.3",
    "@types/mocha": "^8.2.0",
    "@types/sinon": "^9.0.9",
    "@types/sinon-chai": "^3.2.5",
    "@types/validator": "^13.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.1",
    "deep-equal-in-any-order": "^1.0.28",
    "husky": "^4.3.5",
    "lerna": "^3.22.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.4.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3",
    "vm2": "^3.9.2"
  }
