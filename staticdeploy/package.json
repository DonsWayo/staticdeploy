{
  "name": "@staticdeploy/staticdeploy",
  "description": "Main service of the StaticDeploy platform",
  "version": "0.12.2",
  "private": true,
  "main": "build/server.js",
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/staticdeploy.git"
  },
  "bugs": {
    "url": "https://github.com/staticdeploy/staticdeploy/issues"
  },
  "scripts": {
    "compile": "rimraf build && tsc",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "test": "NODE_ENV=test TS_NODE_FILES=true mocha --exit -t 20000 -r ts-node/register --watch-extensions ts 'test/**/*.ts'",
    "start": "NODE_ENV=production node build/server.js",
    "docker:build": "docker build -f ./Dockerfile -t staticdeploy/staticdeploy:$DOCKER_TAG ../",
    "docker:tag-latest": "docker tag staticdeploy/staticdeploy:$DOCKER_TAG staticdeploy/staticdeploy:latest",
    "docker:push": "docker push staticdeploy/staticdeploy"
  },
  "dependencies": {
    "@mondora/env": "^1.3.0",
    "@staticdeploy/core": "^0.12.2",
    "@staticdeploy/http-adapters": "^0.12.2",
    "@staticdeploy/management-console": "^0.12.2",
    "@staticdeploy/memory-storages": "^0.12.2",
    "@staticdeploy/pg-s3-storages": "^0.12.2",
    "@staticdeploy/serve-static": "^0.12.2",
    "@staticdeploy/tar-archiver": "^0.12.2",
    "bunyan": "^1.8.12",
    "bunyan-middleware": "^0.8.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "lodash": "^4.17.15",
    "vhost": "^3.0.2"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.136",
    "@types/mocha": "^5.2.7",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
