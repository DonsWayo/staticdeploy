{
    "name": "@staticdeploy/static-server",
    "description": "staticdeploy static server",
    "version": "0.0.0",
    "private": true,
    "main": "build/server.js",
    "license": "MIT",
    "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/staticdeploy/staticdeploy.git"
    },
    "bugs": {
        "url": "https://github.com/staticdeploy/staticdeploy/issues"
    },
    "scripts": {
        "compile": "rimraf build && tsc",
        "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
        "prettify": "yarn prettier --write",
        "lint:prettier": "yarn prettier --list-different",
        "lint:tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
        "lint": "yarn lint:prettier && yarn lint:tslint",
        "test": "TS_NODE_TYPE_CHECK=true NODE_ENV=test NODE_PATH=src mocha --exit -t 5000 -r ts-node/register --watch-extensions ts 'test/**/*.ts'",
        "start": "NODE_ENV=production NODE_PATH=build node build/server.js",
        "docker:build": "docker build -f ./Dockerfile -t staticdeploy/static-server:$DOCKER_TAG ../",
        "docker:push": "docker push staticdeploy/static-server:$DOCKER_TAG"
    },
    "dependencies": {
        "@mondora/env": "^1.0.4",
        "@staticdeploy/app-config": "^2.0.0",
        "@staticdeploy/storage": "^0.0.0",
        "bunyan": "^1.8.12",
        "bunyan-middleware": "^0.8.0",
        "express": "^4.16.2",
        "express-healthchecker": "^1.0.0"
    },
    "devDependencies": {
        "@types/bunyan": "^1.8.4",
        "@types/chai": "^4.1.2",
        "@types/cheerio": "^0.22.7",
        "@types/express": "^4.11.1",
        "@types/lodash": "^4.14.104",
        "@types/mocha": "^2.2.48",
        "@types/supertest": "^2.0.4",
        "@types/tar": "^4.0.0",
        "chai": "^4.1.2",
        "cheerio": "^1.0.0-rc.2",
        "create-fs-tree": "^1.0.0",
        "lodash": "^4.17.5",
        "mocha": "^5.0.1",
        "prettier": "^1.11.0",
        "rimraf": "^2.6.2",
        "supertest": "^3.0.0",
        "tar": "^4.4.0",
        "ts-node": "^5.0.0",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.9.0",
        "typescript": "^2.7.2",
        "vm2": "^3.5.2"
    }
}
